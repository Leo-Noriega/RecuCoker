FROM maven:3.9.6-eclipse-temurin-17 AS build
WORKDIR /workspace
COPY recu/pom.xml recu/pom.xml
COPY recu/src recu/src
RUN mvn -f recu/pom.xml clean package -DskipTests

FROM eclipse-temurin:17-jre
WORKDIR /app
COPY --from=build /workspace/recu/target/dis-server-0.0.1-SNAPSHOT.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","/app/app.jar"]
